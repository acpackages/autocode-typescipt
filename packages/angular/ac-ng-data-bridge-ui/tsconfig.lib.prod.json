{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    // "declarationMap": false,
    // "sourceMap": false,
    "declaration": true,  // Ensures .d.ts emissions include augmentations
    "declarationMap": true,
    "skipLibCheck": true,
    "paths": {
      "@autocode-ts/autocode": ["dist/packages/common/autocode"],
      "@autocode-ts/ac-browser": ["dist/packages/browser/ac-browser"],
      "@autocode-ts/ac-extensions": ["dist/packages/common/ac-extensions"],
      "@autocode-ts/ac-ng-runtime": ["dist/packages/angular/ac-ng-runtime"],
    }
  },
  "include": [
    "src/**/*.d.ts",
  ]
}

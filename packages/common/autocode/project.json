{
  "name": "autocode",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/common/autocode/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "type": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p packages/common/autocode/tsconfig.lib.json"
      }
    },
    "copy-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -r dist-types/*.d.ts dist/"
      },
      "dependsOn": ["type"]
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist",
        "main": "packages/common/autocode/src/index.ts",
        "tsConfig": "packages/common/autocode/tsconfig.lib.json",
        "assets": ["packages/common/autocode/*.md"],
        "format": ["cjs","esm"],
        "generatePackageJson": true
      },
      "dependsOn": ["^type"]
    }
  }
}

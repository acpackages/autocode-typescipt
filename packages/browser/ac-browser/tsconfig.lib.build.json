{
  "extends": "../../../tsconfig.base.build.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "composite": false,
    "types": ["node", "vite/client"]
